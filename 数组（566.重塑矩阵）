class Solution {
public:
    vector<vector<int>> matrixReshape(vector<vector<int>>& mat, int r, int c) {
        int m = mat.size();
        int n = mat[0].size();
        if(r*c != m*n)
        return mat;

        vector<vector<int>> res(r, vector<int>(c));
        for(int x = 0; x < m * n; x++){
            res[x / c][x % c] = mat[x / n][x % n];
        }
        return res;
    }
};
