// The API isBadVersion is defined for you.
// bool isBadVersion(int version);

class Solution {
public:
    int firstBadVersion(int n) {
        int left = 1, pivot, right = n;
        if(isBadVersion(1)) return 1;
        while(left < right){
            pivot = left + (right - left) / 2;
            if(isBadVersion(pivot) && !isBadVersion(pivot - 1)) return pivot;
            if(isBadVersion(pivot) && isBadVersion(pivot - 1)) right = pivot;
            if(!isBadVersion(pivot)) left = pivot + 1;
        }
        return left;
    }
};
