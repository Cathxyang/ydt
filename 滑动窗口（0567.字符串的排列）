class Solution {
public:
    bool checkInclusion(string s1, string s2) {
        int n = s1.size(), m = s2.size();
        if(n > m){
            return false;
        }
        vector<int> occ(26);
        for(int i = 0; i < n; i++){
            occ[s1[i] - 'a']--;
        }
        int left = 0;
        for(int right = 0; right < m; right++){
            int x = s2[right] - 'a';
            occ[x]++;
            while(occ[x] > 0){
                occ[s2[left] - 'a']--;
                left++;
            }
            if(right - left + 1 ==n){
                return true;
            }
        }
        return false;
    }
};
